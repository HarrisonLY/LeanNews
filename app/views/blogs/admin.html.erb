<% content_for :title, "Blog Admin Panel" %>

<!-- Header Image & Text -->

<div class="header_image"> 
  <div class="header_container">
    <p class="header_text"> LeanBlog </p> 
    <p class="header_subtext"> Admin Panel </p>
  </div>
</div>

<!-- LeanBlog Post Table -->

<div class="leantable">
<div id="notice"><%= notice %> </div>

  <div class="center_text">
    <%= will_paginate @blogs %>
  </div>

  <div class="container">
    <h2> LeanBlogs <%= link_to 'New Post', new_blog_path, :class => 'btn btn-success btn-sm' %> </h2>  
      <table class="table">
        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td><%= link_to blog.title, blog %></td>
              <td><%= link_to 'Edit', edit_blog_path(blog), :class => 'btn btn-warning btn-sm' %></td>
              <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %></td>
            </tr>
         <% end %>
        </tbody>
     </table>
  </div> 

</div>