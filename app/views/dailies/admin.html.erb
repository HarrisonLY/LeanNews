<% content_for :title, "Daily Newsletter Admin Panel" %>

<!-- Header Image & Text -->

<div class="header_image"> 
  <div class="header_container">
    <p class="header_text"> LeanDaily </p> 
    <p class="header_subtext"> Admin Panel </p>
  </div>
</div>

<!-- LeanDaily Post Table -->

<div class="leantable">
<div id="notice"><%= notice %> </div>

  <div class="center_text">
    <%= will_paginate @dailies %>
  </div>

  <div class="container">
    <h2> LeanDaily <%= link_to 'New Post', new_daily_path, :class => 'btn btn-success btn-sm' %> </h2>  
      <table class="table">
        <tbody>
          <% @dailies.each do |daily| %>
            <tr>
             <td><%= link_to daily.title, daily %></td>
             <td><%= link_to 'Edit', edit_daily_path(daily), :class => 'btn btn-warning btn-sm' %></td>
             <td><%= link_to 'Destroy', daily, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %></td>
           </tr>
         <% end %>
        </tbody>
     </table>
  </div> 

</div>