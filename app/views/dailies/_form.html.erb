<%= simple_form_for(@daily) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
   <% if @daily.new_record? %>
	<%= f.input :slug, :input_html => { :value => Time.now.strftime("%m-%d-%Y") } %>
   <% else %>
	<%= f.input :slug %>
   <% end %>
    <%= f.input :content %>
  </div>


  <div class="form-actions" style="text-align: center">
   <%= f.button :submit, :class => 'btn btn-success btn-md' %>
   <%= link_to 'Cancel', admin_daily_path, :class => 'btn btn-danger btn-md' %>
  </div>
<% end %>