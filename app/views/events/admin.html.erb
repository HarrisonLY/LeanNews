<% content_for :title, "LeanNews Event Admin Panel" %>

<!-- Header Image & Text -->

<div class="header_image"> 
  <div class="header_container">
    <p class="header_text"> LeanEvents </p> 
    <p class="header_subtext"> Admin Panel </p>
  </div>
</div>

<!-- LeanEvent Post Table -->

<div class="leantable">
<div id="notice"><%= notice %> </div>

  <div class="center_text">
    <%= will_paginate @events %>
  </div>

  <div class="container">
    <h2> LeanEvent <%= link_to 'New Post', new_event_path, :class => 'btn btn-success btn-sm' %> </h2>  
      <table class="table">
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= link_to event.title, event %></td>
              <td><%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-warning btn-sm' %></td>
              <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %></td>
            </tr>
         <% end %>
        </tbody>
     </table>
  </div> 

</div>