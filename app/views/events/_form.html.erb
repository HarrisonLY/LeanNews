<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	 <%= f.input :title %>
  	 <%= f.input :location %>
  	 <%= f.input :time %>
  	 <%= f.input :price %>
  	 <%= f.input :who %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
