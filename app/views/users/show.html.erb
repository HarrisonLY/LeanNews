<% content_for :title, "User Account Overview" %>

<!-- Header Image & Text -->

<div class="header_image">
    <div class="header_container">
        <p class="header_text"> My Account </p> 
    </div>
</div>

<!-- User Table -->

<div class="leantable">
<div id="notice"><%= notice %> </div>

<article id="user">
<header class="center_text">

    <h1><%= @user.name %></h1>
    <p><%= @user.email %></p>

    <% if current_user_admin? %>

    <%= link_to 'Edit Account', edit_user_path(@user), class: 'btn btn-warning btn-sm' %>
    <%= link_to 'Sign Out', session_path, method: :delete, class: 'btn btn-primary btn-sm' %>

    <br> 
    <br>

    <%= link_to 'Delete Account', @user, method: :delete, data: { confirm: 'Are you sure you want to permanently delete your account?' }, class: 'btn btn-danger btn-sm' %>

    <p style="width: 80%; margin-top: 40px; margin-right: auto; margin-left: auto; left: 0; right: 0;font-size: 16px;font-family: lora;"> Yayyyyyy You're An Admin :) </p>

    <% else %>

    <%= link_to 'Edit Account', edit_user_path(@user), class: 'btn btn-warning btn-sm' %>
    <%= link_to 'Sign Out', session_path, method: :delete, class: 'btn btn-primary btn-sm' %>

    <p style="width: 80%; margin-top: 40px; margin-right: auto; margin-left: auto; left: 0; right: 0;font-size: 16px;font-family: lora;"> Sorry! You aren't an Admin. So you can't really do jack. <br> If you'd like, you can request admin access by <a href="mailto:theanchormen@leannews.com?&amp;subject=LeanNews Admin Request&amp;body=Hey%20Harrison%20and%20Ed,%0A%0AI%20just%20signed%20up%20with%20the%20email%20account%20(email%20address)%20and%20need%20admin%20access.%20Please%20help!%20%0A%0AThanks,%0A%0A(Name)" style="color: #fd9827; font-weight: 500; font-style: oblique; ">emailing us</a> :) </p>

   <% end %>
  </header>
</article>

</div>