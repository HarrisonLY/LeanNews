<div style="height: 150px; background: linear-gradient(rgba(0, 0, 0, 0.64), rgba(0, 0, 0, 0.59)) , url(assets/about-7b58b79edfb0231e6812ba29e16f15315fe4828606dc5df845d12eca47ddfa63.jpg);background-size: cover;">

<div class="container" style="padding-top: 60px; padding-left: 20px; padding-right: 20px;">

<p style="text-align: center; font-size: 30px; font-family: Ubuntu; font-weight: bold; color: white;"><%= pluralize(@users.size, 'User') %> </p>

</div>
</div>

<div style="min-height: 250px; margin: 20px 5%">

<div id="notice"><%= notice %></div>

  <%= will_paginate @users %>

<table class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Admin?</th>
            <th>Delete 'Em</th>
        </tr>
    </thead>
    <tbody>
  <% @users.each do |user| %>
        <tr>
            <td> <%= link_to user.id, user %> </td>
            <td> <%= link_to user.name, user %> </td>
            <td> <%= user.email %> </td>
            <td> <%= user.admin? %> </td>
            <td data-confirm="Are you sure?"><%= link_to 'Delete', user, :method => :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>