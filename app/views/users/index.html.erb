<div style="height: 150px; background: linear-gradient(rgba(0, 0, 0, 0.64), rgba(0, 0, 0, 0.59)) , url(assets/about-7b58b79edfb0231e6812ba29e16f15315fe4828606dc5df845d12eca47ddfa63.jpg);background-size: cover;">

<div class="container" style="padding-top: 60px; padding-left: 20px; padding-right: 20px;">

<p style="text-align: center; font-size: 30px; font-family: Ubuntu; font-weight: bold; color: white;"><%= pluralize(@users.size, 'User') %> </p>

</div>
</div>

<div style="min-height: 250px; margin: 20px 5%">

<div id="notice"><%= notice %></div>

  <p>
    <% if current_user %>
      <%= link_to current_user.name, current_user %>
      <%= link_to "Account Settings", edit_user_path(current_user) %>
  	  <%= link_to 'Sign Out', session_path, method: :delete, class: 'button' %>
    <% else %>
      <%= link_to 'Sign Up', signup_path, class: 'button' %>
      <%= link_to 'Sign In', new_session_path, class: 'button' %>
    <% end %>
  </p>

<ul id="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

</div>