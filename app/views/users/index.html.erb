<title> LeanNews Users </title>

<!-- Header Image & Text -->

<div class="header_image">
    <div class="header_container">
        <p class="header_text"> <%= pluralize(@users.size, 'User') %> </p> 
    </div>
</div>

<!-- User Table -->

<div class="leantable">
<div id="notice"><%= notice %> </div>

<%= will_paginate @users %>

<table class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Admin?</th>
            <th>Delete 'Em</th>
        </tr>
    </thead>
    <tbody>
  <% @users.each do |user| %>
        <tr>
            <td> <%= link_to user.id, user %> </td>
            <td> <%= link_to user.name, user %> </td>
            <td> <%= user.email %> </td>
            <td> <%= user.admin? %> </td>
            <td data-confirm="Are you sure?"><%= link_to 'Delete', user, :method => :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>