<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :job_type, collection: [ "Customer Service", "Developer", "Human Resources", "Legal", "Marketing", "Sales", "Other"]  %>
    <%= f.input :title %>
    <%= f.input :link %>
   <% if @job.new_record? %>
	<%= f.input :slug, :input_html => { :value => Time.now.strftime("%m-%d-%Y") } %>
   <% else %>
	<%= f.input :slug %>
   <% end %>
    <%= f.input :company %>
    <%= f.input :description, size: 1000 %>

  <div>
    <h1> Location </h1>
    <%= f.input :country, default: [ "United States" ], collection: [ "United States"]  %>
    <%= f.input :state, collection: (us_states),default: [ "New York" ]  %>
    <%= f.input :city, default: [ "New York" ], collection: [ "New York", "Brooklyn", "Queens"]  %>
  </div> 

  </div>


  <div class="form-actions" style="text-align: center">
   <%= f.button :submit, :class => 'btn btn-success btn-md' %>
   <%= link_to 'Cancel', admin_job_path, :class => 'btn btn-danger btn-md' %>
  </div>
<% end %>